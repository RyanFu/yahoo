<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/app"
    android:layout_width="1dp" android:layout_height="1dp" android:orientation="vertical" 
    android:padding="2px" android:layout_margin="2px"
    android:background="@drawable/background">
    <RelativeLayout android:id="@+id/tabBar" android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:orientation="vertical">
        <ScrollView  android:layout_height="fill_parent" android:layout_width="fill_parent">
            <RelativeLayout android:layout_height="fill_parent" android:layout_width="fill_parent" 
                android:background="@drawable/background">
            <TextView
                android:id="@+id/news_title"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="test" 
                android:textSize="22dp"
                android:textColor="#111111"
                android:background="@drawable/background"/>
            <TextView
                android:id="@+id/news_content"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="test" 
                android:textSize="20dp"
                android:layout_below="@+id/news_title"
                android:textColor="#333333"
                android:background="@drawable/background"/>
            <TextView
                android:id="@+id/news_url"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="test" 
                android:textSize="10dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/news_content"
                android:textColor="#0000ff"
                android:background="@drawable/background"/>
            </RelativeLayout>
            </ScrollView>
        <ImageView android:id="@+id/BtnSlide" android:layout_width="30dp" android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/tab" />
    </RelativeLayout>
    
</LinearLayout>
