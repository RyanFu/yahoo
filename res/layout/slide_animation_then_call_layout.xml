<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/menu" android:layout_width="wrap_content" android:layout_height="fill_parent"
        android:orientation="vertical" android:background="@drawable/background"
        android:layout_margin="0dp">
        <ImageView android:id="@+id/menu" android:src="@drawable/sidde_menu2" android:layout_width="wrap_content"
        android:layout_height="fill_parent" android:scaleType="fitStart" />
        
    </LinearLayout>
    
    <LinearLayout android:id="@+id/app" android:layout_width="match_parent" android:layout_height="fill_parent"
        android:orientation="vertical">
        
        <RelativeLayout android:layout_width="match_parent" android:layout_height="fill_parent">
            <ScrollView  android:layout_height="fill_parent" android:layout_width="fill_parent">
            <RelativeLayout android:layout_height="fill_parent" android:layout_width="fill_parent" 
                android:background="@drawable/background">
            <TextView
                android:id="@+id/news_title"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="test" 
                android:textSize="22dp"
                android:textColor="#111111"
                android:background="@drawable/background"/>
            <TextView
                android:id="@+id/news_content"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="test" 
                android:textSize="20dp"
                android:layout_below="@+id/news_title"
                android:textColor="#333333"
                android:background="@drawable/background"/>
            <TextView
                android:id="@+id/news_url"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="test" 
                android:textSize="10dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/news_content"
                android:textColor="#0000ff"
                android:background="@drawable/background"/>
            </RelativeLayout>
            </ScrollView>
        <Button android:id="@+id/BtnSlide" android:layout_width="30dp" android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/tab"/>
        </RelativeLayout>
         
        <!-- <ListView android:id="@+id/list" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ff00ff00" android:cacheColorHint="#ff00ff00">
        </ListView> -->
    </LinearLayout>
   
</FrameLayout>
